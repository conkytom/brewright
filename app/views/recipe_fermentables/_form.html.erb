<%= form_for [@recipe, RecipeFermentable.new], url: recipe_create_custom_ferm_path(@recipe.id) do |f| %>
    <% if @recipe_fermentable.errors.any? %>
        <div class="alert alert-danger">
            <h4><%= pluralize(@recipe_fermentable.errors.count, "error") %>.</h4>
            <ul>
                <% @recipe_fermentable.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <form class="col s12">
            <small>* required</small>
            <div class="row">
                <div class="input-field col s6">
                    <%= form_group_tag(@recipe_fermentable.errors[:name]) do %>
                        <label for="name">Fermentable Name*</label>
                        <%= f.text_field :name, class: 'form-control' %>
                    <% end %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <%= form_group_tag(@recipe_fermentable.errors[:alpha_acid]) do %>
                        <label for="extract">% Extract*</label> 
                        <%= f.text_field :extract, class: 'form-control' %>
                    <% end %>
                </div>
                <div class="col s4 offset-s2">
                    <label for="ferm_type">Fermentable Type</label>
                    <%= f.select(:ferm_type, ferm_types) %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <label for="color">Color(ËšL)*</label>
                    <%= f.number_field :color, class: 'form-control' %>
                </div>
                <div class="input-field col s5 offset-s2">
                    <label for="usage_rate">Max Usage Rate(%)</label>
                    <%= f.number_field :usage_rate, class: 'form-control' %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label for="maltster">Maltster</label>
                    <%= f.text_field :maltster, class: 'form-control' %>
                </div>
                <div class="input-field col s6">
                    <label for="origin">Country of Origin</label> 
                    <%= f.text_field :origin, class: 'form-control' %>   
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="comment">Comments</label>
                    <%= f.text_area :comment, rows: 8, class: 'form-control' %>
                </div>
            </div>
            <div class="row">
                <div class="col s2 offset-s7">
                    <%= f.submit "SAVE", class: 'btn orange darken-3' %>
                </div>
            </div>
        </form>
    </div>
<% end %>

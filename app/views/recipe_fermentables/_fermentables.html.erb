<tr class="fermentable-row">
    <%= f.inputs do %>
        <td colspan="3"><%= f.text_field :name %></td>
        <td class="fermentable-amount"><%= f.number_field :amount, step: 0.1 %></td>
        <td>LBS^</td>
        <td><%= f.number_field :color %>ËšL</td>
        <td><%= f.number_field :extract %>%</td>
        <td>
        <% if f.object.ferm_type != 'Sugar Adjunct' %>
            <%= f.select(:location, grain_locations) %>
        <% else %>
            <%= f.select(:location, sugar_locations) %>
        <% end %>
        </td>
        <td>BILL%</td>
        <td><a data-target="modal_edit_fermentable<%= f.object.id %>" class="modal-trigger"><%= image_tag("icon-advanced.png", height: "15", alt: "Edit this fermentable")%></a>
        <%= link_to "X", recipe_recipe_fermentable_path(recipe_id: @recipe.id, id: f.object.id), method: :delete %></td>
    <% end %>
</tr>


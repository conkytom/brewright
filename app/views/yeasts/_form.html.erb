<%= form_for [yeast] do |f| %>
    <% if yeast.errors.any? %>
        <div class="alert alert-danger">
            <h4><%= pluralize(yeast.errors.count, "error") %>.</h4>
            <ul>
                <% yeast.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <form class="col s12">
            <small>* required</small>
            <div class="row">
                <div class="input-field col s6">
                    <%= form_group_tag(yeast.errors[:name]) do %>
                        <label for="name">Yeast Strain Name*</label>
                        <%= f.text_field :name %>
                    <% end %>
                </div>
                <div class="col s4 offset-s1">
                    <label for="yeast_type">Yeast Type</label>
                    <%= f.select(:yeast_type, yeast_types) %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s3">
                    <%= form_group_tag(yeast.errors[:alpha_acid]) do %>
                        <label for="attenuation">Attenuation %*</label> 
                        <%= f.text_field :attenuation %>
                    <% end %>
                </div>
                <div class="col s4 offset-s3">
                    <label for="flocculation">Flocculation</label> 
                    <%= f.select(:flocculation, yeast_floc_options) %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <label for="temp_range">Temp Range ËšF</label>
                    <%= f.text_field :temp_range %>
                </div>
                <div class="input-field col s4 offset-s2">
                    <label for="tolerance">Tolerance(%ABV)</label>
                    <%= f.text_field :tolerance %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <label for="lab">Lab/Manufacturer</label>
                    <%= f.text_field :lab %>
                </div>
                <div class="input-field col s4">
                    <label for="product_id">Product ID</label>
                    <%= f.text_field :product_id %>
                </div>
                <div class="col s4">
                    <label for="form">Form</label> 
                    <%= f.select(:form, yeast_forms) %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="comment">Comments</label>
                    <%= f.text_area :comment, rows: 8 %>
                </div>
            </div>
            <div class="row">
                <div class="col s2">
                    <% if yeast.id %>
                        <%= link_to "DELETE", yeast, method: :delete, class: 'btn red darken-4', data: { confirm: 'Are you sure you want to delete this yeast variety?'} %>
                    <% end %>
                </div>
                <div class="col s2 offset-s7">
                    <%= f.submit "SAVE", class: 'btn orange darken-3' %>
                </div>
            </div>
        </form>
    </div>
<% end %>

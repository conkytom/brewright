<div class="row">
    <div class=""><h2>Yeasts</h2></div>
    <button data-target="modal_add_yeast" class="btn modal-trigger orange darken-3">Add Yeast Strain</button>
</div>

<ul class="collapsible" data-collapsible="accordion">
    <% @yeasts.each do |yeast| %>
        <li>
            <div class="collapsible-header row">
                <div class="col s1">
                    <%= image_tag("icon-yeast.png", height: "15")%>
                </div>
                <div class="col s4">
                    <%= yeast.name %> 
                </div>
                <div class="col s3">
                    <%= yeast.alpha_acid %>% AA
                </div>
                <div class="col s2">
                    <%= yeast.yeast_type %>
                </div>
                <div class="col s1">
                    <a data-target="modal_edit_yeast<%= yeast.id %>" class="modal-trigger "><%= image_tag("icon-advanced.png", height: "15", alt: "Edit this yeast")%></a>                
                </div>
                <div id="modal_edit_yeast<%= yeast.id %>" class="modal modal_edit_yeast<%= yeast.id %>">
                    <div class="modal-content">
                        <h4>Edit Yeast Strain</h4>
                        <%= render partial: 'form', locals: { yeast: yeast, id: yeast.id } %>
                    </div>
                </div>
            </div>
            <div class="collapsible-body">
                <div class="row">
                    <span class="col s9">Comment: <%= yeast.comment %> </span>
                    <span class="col s3">Origin:  <%= yeast.origin %></span>
                </div>
            </div>
        </li>
    <% end %>
</ul>

<div id="modal_add_yeast" class="modal modal_add_yeast">
    <div class="modal-content">
        <%= render :template => "yeasts/new" %>
    </div>
</div>

